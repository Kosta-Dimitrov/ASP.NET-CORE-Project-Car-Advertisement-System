@model IndexViewModel
@{
    ViewData["Title"] = "Home Page";
}
@{
    List<VehicleIndexViewModel> vehicles = Model.Vehicles;
    VehicleIndexViewModel vehicle1 = vehicles.Count > 0 ? vehicles[0] : null;
    VehicleIndexViewModel vehicle2 = vehicles.Count > 1 ? vehicles[1] : null;
    VehicleIndexViewModel vehicle3 = vehicles.Count > 2 ? vehicles[2] : null;
}


@if (Model.TotalVehicles == 0)
{
    <div class="jumbotron">
        <h1 class="display-4">Welcome to the best vehicle advertisement system</h1>
        <p class="lead">Currently there are no vehicles avaliable</p>
        <hr class="my-4" />
        <p class="lead">
            <a asp-controller="Vehicle" asp-action="Add" class="btn btn-primary btn-lg" role="button">Add new vehicle</a>
        </p>
    </div>
}
<div class="mb-5"></div>
<div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
    <ol class="carousel-indicators">
        <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
        @if (vehicle2 != null)
        {
            <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
        }
        @if (vehicle3 != null)
        {
            <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
        }
    </ol>
    <div class="carousel-inner">
        @if (vehicle1 != null)
        {
            <div class="carousel-item active">
                <img class="d-block w-100" src="@vehicle1.ImageUrl" alt="@vehicle1.Brand @vehicle1.Model - @vehicle1.Fuel">
            </div>
        }
        @if (vehicle2 != null)
        {
            <div class="carousel-item">
                <img class="d-block w-100" src="@vehicle2.ImageUrl" alt="@vehicle2.Brand @vehicle2.Model - @vehicle2.Fuel">
            </div>
        }
        @if (vehicle3 != null)
        {
            <div class="carousel-item">
                <img class="d-block w-100" src="@vehicle3.ImageUrl" alt="@vehicle3.Brand @vehicle3.Model - @vehicle3.Fuel">
            </div>

        }
    </div>
    @if (Model.TotalVehicles > 1)
    {
        <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
        </a>
    }
</div>
<div class="mb-5"></div>
<div class="jumbotron">
    <div class="row">
        <h2 class="col-md-4 text-center">
            @Model.TotalVehicles Vehicles
        </h2>
        <h2 class="col-md-4 text-center">
            @Model.TotalUsers Users
        </h2>
        <h2 class="col-md-4 text-center">
            @Model.TotalBrands Brands
        </h2>
    </div>
</div>
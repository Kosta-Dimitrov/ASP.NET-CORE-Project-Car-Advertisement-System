@model List<BrandViewModel>
@{
    int counter = 0;
}
<table class="table">
    <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">Brand</th>
            <th scope="col">Country</th>
            <th scope="col">Vehicles</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var brand in Model)
        {
            <tr>
                <th scope="row">@(counter+1)</th>
                <td>@brand.Name</td>
                <td>@brand.CountryName</td>
                <td>@brand.VehiclesCount</td>
                @{ 
                    counter++;
                }
            </tr>
        }
    </tbody>
</table>

@model AllCountriesViewModel
@{
    int counter = 0;
}
<table class="table">
    <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">Country</th>
            <th scope="col">Brands</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var country in Model.Countries)
        {
           <tr>
             <th scope="row">@(counter+1)</th>
             <td>@(country.Key)</td>
             <td>@(country.Value)</td>
                  @{
                      counter++;
                  }
           </tr>
        }
    </tbody>
</table>
